<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:layout_width="wrap_content"
    android:layout_alignParentLeft="true">

    <ImageView
        android:layout_alignParentRight="true" android:layout_width="80dp"
        android:layout_height="100dp" android:id="@+id/ItemImage" android:src="@drawable/icon"
        android:contentDescription="@null" android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/ItemText" android:layout_height="wrap_content"
        android:layout_width="fill_parent" android:textSize="20dp" android:text="dfds" />

    <TextView
        android:id="@+id/ItemTitle" android:layout_height="wrap_content"
        android:layout_width="fill_parent" android:textSize="20dp" android:text="fdr"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>