<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:layout_width="wrap_content"
    android:layout_alignParentLeft="true">

    <Button
        android:layout_alignParentRight="true" android:layout_width="80dp"
        android:layout_height="50dp" android:id="@+id/ItemButton"
        android:contentDescription="@null" android:scaleType="fitXY"
        android:focusable="false" android:onClick=""/>

    <TextView
        android:id="@+id/ItemText" android:layout_height="wrap_content"
        android:layout_width="fill_parent" android:textSize="15dp" android:text="dfds" />

    <TextView
        android:id="@+id/ItemTitle" android:layout_height="wrap_content"
        android:layout_width="fill_parent" android:textSize="15dp" android:text="fdr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />



</RelativeLayout>